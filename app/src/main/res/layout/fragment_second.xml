<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".SecondFragment">

    <!-- TODO: Update blank fragment layout -->


    <LinearLayout
        android:id="@+id/LinearLayout3Fragment"
        android:layout_width="409dp"
        android:layout_height="400dp"
        android:orientation="vertical"
        android:translationY="10dp"
        android:layout_marginBottom="25dp"
        app:layout_constraintBottom_toTopOf="@+id/LinearLayout4Fragment"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/PizzaFragment"
            android:contentDescription="@string/Pizza"
            android:layout_width="match_parent"
            android:layout_height="353dp"
            android:src="@drawable/pizza"
            android:translationY="50dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/LinearLayout4Fragment"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:orientation="vertical"
        android:translationY="200dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/LinearLayout3Fragment">

        <TextView
            android:id="@+id/PizzaAciklamaFragment"
            android:layout_width="match_parent"
            android:layout_height="279dp"
            android:text="@string/Pizza"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="34sp"
            android:textStyle="bold|italic"
            android:translationY="-200dp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>